# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terminal_server

# Container Configuration
CONTAINER_PLATFORM=docker  # docker or kubernetes
TERMINAL_IMAGE=terminal-server:latest
TERMINAL_TTL_HOURS=24

# Kubernetes Configuration (if using GKE)
K8S_NAMESPACE=default
K8S_IN_CLUSTER=false

# Docker Configuration
DOCKER_HOST=unix://var/run/docker.sock

# Localtunnel Configuration
LOCALTUNNEL_HOST=https://localtunnel.me

# Cleanup Service
CLEANUP_INTERVAL_MINUTES=5

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# GCP Configuration (optional, for production)
GCP_PROJECT_ID=
GCP_REGION=us-central1
